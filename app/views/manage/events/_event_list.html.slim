- if events.present?
  - product = defined?(product) ? product : nil
  - bid = defined?(bid) ? bid : nil
  #events
    - if bid
      = render partial: 'events/event', collection: events
    - else
      = render partial: 'manage/events/event', collection: events
    = paginate events,
      params: { controller: "#{current_role}/events",
        action: :index,
        id: nil,
        product_id: product&.id,
        bid_id: bid&.id }
